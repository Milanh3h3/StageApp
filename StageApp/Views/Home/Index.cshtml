@{
    ViewData["Title"] = "API key";
}
<h1>Set API Key</h1>
<div class="container form-container">
    <div class="row">
        <div class="col-md-6 form-section">
            <h3>Set API key</h3>
            <p>API key is necessary for every function. Please enter your API key before submitting any functions.</p>
            <form method="post" action="/Home/SetAPIkey">
                @Html.AntiForgeryToken()
                <div>
                    <label class="form-label">API key</label>
                    <div class="input-group">
                        <input type="password" class="form-control" id="API_Key_Field" name="API_key" required>
                        <button type="button" class="btn btn-outline-secondary toggle-visibility" onclick="toggleVisibility('API_Key_Field')">Show</button>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
        </div>
        <div class="col-md-6 form-section">
            <h3>Note:</h3>
            <p>For security reasons the API key needs to be set again every 4 hours</p>
        </div>
    </div>
</div>

<script>
    function toggleVisibility(fieldId) {
        const field = document.getElementById(fieldId);
        if (field.type === "password") {
            field.type = "text";
        } else {
            field.type = "password";
        }
    }
</script>
